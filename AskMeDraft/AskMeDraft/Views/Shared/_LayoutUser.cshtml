@{ 
    ViewBag.SessionUser = Session["User"];

    if(ViewBag.SessionUser.Role != "admin") { ViewBag.hideAdminFeatures = "Display: none"; }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ask Me</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container-fluid px-0">
        <nav class="navbar navbar-dark navbar-expand-lg navbar-light bg-dark">
            <div class="container">
                @Html.ActionLink("Ask Me", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Profile", "UserProfile", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("My Questions", "MyQuestions", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("My Answers", "MyAnswers", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item" style="@ViewBag.hideAdminFeatures">
                            @Html.ActionLink("Reports", "Reports", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item" style="@ViewBag.hideAdminFeatures">
                            @Html.ActionLink("Banned", "Banned", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    </ul>
                    <span class="navbar-text">
                        @ViewBag.SessionUser.Username ( @Html.ActionLink("Logout", "Logout", "User", new {message = "You have been logged out." }, null) )
                    </span>
                </div>
            </div>
        </nav>
        <div class="container body-content p-2">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Ask Me - SD Project - B1G3</p>
            </footer>
        </div>

    </div>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>
