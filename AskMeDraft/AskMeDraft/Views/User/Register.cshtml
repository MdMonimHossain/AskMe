
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<br>
<h2>Register</h2>
<br>
<form class="form-row" action="/User/Register" method="post">
    <div class="form-group col-md-4 my-2">
        <label for="InputName">Name</label>
        <input type="text" class="form-control" id="InputName" placeholder="Name" name="Name" value="@ViewBag.Name">
    </div>
    <div class="form-group col-md-4 my-2">
        <label for="InputUsername">Username</label>
        <input type="text" class="form-control" id="InputUsername" placeholder="Username" name="Username" value="@ViewBag.Username">
    </div>
    <div class="form-group col-md-4 my-2">
        <label for="InputEmail">Email</label>
        <input type="email" class="form-control" id="InputEmail" placeholder="Email" name="Email" value="@ViewBag.Email">
    </div>
    <div class="form-group col-md-4 my-2">
        <label for="InputPassword">Password</label>
        <input type="password" class="form-control" id="InputPassword" placeholder="Password" name="Password">
    </div>
    <div class="form-group col-md-4 my-2">
        <label for="InputConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="InputConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword">
    </div>
    <div class="text-danger">
        @Html.ValidationSummary()
        @ViewBag.Error
    </div>
    <button type="submit" class="btn btn-dark my-2">Register</button>
</form>
<br>
<p>Already a member? @Html.ActionLink("Login", "Login", "User", new { @class = "link-secondary" }) </p>