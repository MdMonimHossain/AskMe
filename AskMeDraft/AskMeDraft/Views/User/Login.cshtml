
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<br>
<h2>Login</h2>
<br>
<form class="form-row" action="/User/Login" method="post">
    <div class="form-group col-md-4 my-2">
        <label for="InputUsername">Username</label>
        <input type="text" class="form-control" id="InputUsername" placeholder="Username" name="Username" value="@ViewBag.Username">
    </div>
    <div class="form-group col-md-4 my-2">
        <label for="InputPassword">Password</label>
        <input type="password" class="form-control" id="InputPassword" placeholder="Password" name="Password">
    </div>
    <div class="text-danger" id="validationtext">
        @Html.ValidationSummary()
        @ViewBag.Error
    </div>
    <button type="submit" class="btn btn-dark my-2">Login</button>
</form>
<br>
<div class="text-success">
    @ViewBag.Message
</div>
<br>
<p>Not a member? @Html.ActionLink("Register", "Register", "User", new { @class = "link-secondary" }) or <a href="/Home/Index" class="link-secondary">Login as a Guest</a> </p>